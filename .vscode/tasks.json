{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: watch",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build"
		},
		{
			"label": "web-ext",
			"type": "shell",
			"command": "web-ext build",
			"options": {
				"cwd": "${workspaceFolder}/ext"
			},
			"group": "build"
		}
	]
}